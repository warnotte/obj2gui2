<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{1} (%F:%L) - %m%n" />
		</layout>
	</appender>

	<!-- Second Appender, ne journalise que les messages WARN Ã  FATAL -->
	<appender name="fileinfoup" class="org.apache.log4j.FileAppender">
		<param name="File" value="./logs/logsOBJ2GUI2.xml" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.xml.XMLLayout" />
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="levelMin" value="WARN" />
			<param name="levelMax" value="FATAL" />
		</filter>
	</appender>

	<appender name="fileinfoup2" class="org.apache.log4j.FileAppender">
		<param name="file" value="./logs/logsOBJ2GUI2.html" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.HTMLLayout" />
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="levelMin" value="WARN" />
			<param name="levelMax" value="FATAL" />
		</filter>
	</appender>



	<appender class="org.apache.log4j.AsyncAppender" name="async1">
		<appender-ref ref="fileinfoup" />
	</appender>
	<appender class="org.apache.log4j.AsyncAppender" name="async2">
		<appender-ref ref="fileinfoup2" />
	</appender>


	<appender name="SWING" class="WaxLibrary.Logs.TextAreaAppender">
		<param name="Threshold" value="ALL" />
		<layout class="org.apache.log4j.PatternLayout">
			<!-- The default pattern: Date Priority [Category] Message\n -->
			<param name="ConversionPattern" value="%d{ABSOLUTE} %-5p [%c{1}] %m%n" />
		</layout>
	</appender>


	<root>
		<appender-ref ref="console" />
		<!-- <appender-ref ref="ColoredConsoleAppender"/> -->

		<appender-ref ref="async1" />
		<appender-ref ref="async2" />
		<appender-ref ref="SWING" />
		<!--<appender-ref ref="async3"/>! --> <!-- Ne pas oublier de mettre LogManager.shutdown(); du logger ! -->
		<!--<appender-ref ref="async4"/>! --> <!-- Ne pas oublier de mettre LogManager.shutdown(); du logger ! -->
		<!-- <appender-ref ref="mailappendULG" /> -->
		<!--<appender-ref ref="mailappendGMAIL" /> -->

	</root>
</log4j:configuration>

